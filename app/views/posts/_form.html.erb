<%= form_for @post do |f| %>
   <%= label_tag 'title' %> <br>
   <%= f.text_field :title %> <br>
   <%= label_tag 'category_id' %> <br>
   <%= f.number_field :category_id %> <br>
   <%= label_tag 'description' %> <br>
   <%= f.text_area :description, :rows => 5 %> <br>
   <%= label_tag 'price' %> <br>
   <%= f.number_field :price %> <br>
   <%= label_tag 'email' %> <br>
   <%= f.text_field :email %> <br>
   <%= f.submit "Submit" %>
<% end %>
